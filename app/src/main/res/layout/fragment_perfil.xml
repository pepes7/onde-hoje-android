<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Meu Perfil"
                    android:textColor="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/logo_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <ImageView
                android:id="@+id/foto_perfil"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/cristina" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <EditText
                    android:id="@+id/edit_name_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_perfil"
                    android:editable="false"
                    android:hint="Nome"
                    android:paddingLeft="5dp"
                    android:text="Nome:"
                    android:textColor="#FFF"
                    android:textColorHint="@color/hint" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_perfil"
                    android:editable="false"
                    android:hint="Senha"
                    android:paddingLeft="5dp"
                    android:text="Senha: *************"
                    android:textColor="#FFF"
                    android:textColorHint="@color/hint" />

                <EditText
                    android:id="@+id/edit_email_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_perfil"
                    android:editable="false"
                    android:hint="Email"
                    android:paddingLeft="5dp"
                    android:text="E-mail:"
                    android:textColor="#FFF"
                    android:textColorHint="@color/hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="40dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_perfil_edit_shape"
                    android:drawableLeft="@drawable/ic_pen"
                    android:padding="5dp"
                    android:textColor="#161A32"
                    android:textAllCaps="false"
                    android:text="Editar informações"
                    />

                <Button
                    android:id="@+id/btn_criar_evento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_perfil_edit_shape"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#161A32"
                    android:textAllCaps="false"
                    android:text="Criar evento"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_disconect_shape"
                    android:drawableLeft="@drawable/ic_desconect"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"

                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:text="Desconectar"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>